{
  "name": "feedfathom-app",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "dev": "export _UID=$(id -u) && export _GID=$(id -g) && docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "build-extension": "bun ./bin/generate-packages.ts",
    "build-server": "export BUILD=true && bunx --bun svelte-kit sync && bunx --bun vite build",
    "build-worker": "bun build ./src/worker-entrypoint.ts --outdir=./build/ --target=bun --sourcemap",
    "build-for-image": "bun build-server && bun build-worker",
    "build-project": "rm -rf build && mkdir -p build && (bun build-server & bun build-worker & bun build-extension & wait)",
    "temp-build": "bun run bin/temp-build.js",
    "watch-server": "bunx --bun svelte-kit sync && bunx --bun vite dev --host",
    "watch-worker": "bunx --bun svelte-kit sync && bun --watch ./src/worker-entrypoint.ts",
    "eslint": "bunx --bun eslint --config=eslint.config.js ./src/**/*.{ts,svelte} ./tests/**/*.ts",
    "eslint:fix": "bunx --bun eslint --config=eslint.config.js ./src/**/*.{ts,svelte} ./tests/**/*.ts --fix",
    "svelte-check": "bunx --bun svelte-check --tsconfig ./tsconfig.json",
    "lint": "bun test && bunx --bun svelte-kit sync && biome check && bunx --bunx tsc && bun eslint && bun svelte-check && bun knip",
    "lint:fix": "bunx --bun svelte-kit sync && bun eslint:fix --fix && biome check --write",
    "format": "biome format --write",
    "knip": "knip",
    "generate-migrations": "bunx --bun drizzle-kit generate && bun lint:fix"
  },
  "peerDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.0.322",
    "@types/jsdom": "^21.1.7",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.15.17",
    "@types/smtp-server": "^3.5.10",
    "archiver": "^7.0.1",
    "bun-types": "^1.2.13",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-biome": "^1.9.4",
    "eslint-plugin-svelte": "^3.6.0",
    "globals": "^16.1.0",
    "knip": "^5.55.1",
    "svelte-check": "^4.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.21.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "svelte": "^5.28.6",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@extractus/article-extractor": "^8.0.18",
    "@mozilla/readability": "^0.6.0",
    "@rowanmanning/feed-parser": "^2.0.2",
    "arktype": "^2.1.20",
    "awilix": "^12.0.5",
    "axios": "^1.9.0",
    "axios-cache-interceptor": "^1.8.0",
    "dompurify": "^3.2.5",
    "drizzle-orm": "^0.43.1",
    "fast-xml-parser": "^5.2.3",
    "jsdom": "^26.1.0",
    "mailparser": "^3.7.2",
    "smtp-server": "^3.13.6",
    "ulid": "^3.0.0"
  },
  "type": "module",
  "trustedDependencies": ["@biomejs/biome"],
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": [
      "src/**/*.{ts,svelte}",
      "tests/**/*.ts",
      "bin/**",
      "rollout.js",
      "eslint.config.js"
    ],
    "ignore": ["build/**", "ext/**", "rollout.js", "src/cloudflare/**"],
    "ignoreBinaries": ["build", "biome", "knip"],
    "ignoreUnresolved": ["^\\$service-worker"]
  }
}
