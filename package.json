{
  "name": "feedfathom-app",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "dev": "export _UID=$(id -u) && export _GID=$(id -g) && docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "build-extension": "bun ./bin/generate-packages.ts",
    "build-server": "export BUILD=true && bun run svelte-kit sync && bunx --bun vite build",
    "build-worker": "bun build ./src/worker-entrypoint.ts --outdir=./build/ --target=bun --sourcemap",
    "build-for-image": "bun build-server && bun build-worker",
    "build-project": "rm -rf build && mkdir -p build && (bun build-server & bun build-worker & bun build-extension & wait)",
    "watch-server": "svelte-kit sync && vite dev --host",
    "watch-worker": "svelte-kit sync && bun --watch ./src/worker-entrypoint.ts",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "svelte-kit sync && bun test && biome check && tsc && bun svelte-check && bun knip",
    "lint:fix": "svelte-kit sync && bun biome:fix",
    "biome:fix": "biome check --write",
    "knip": "knip",
    "generate-migrations": "drizzle-kit generate && bun biome:fix"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.39.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "svelte": "^5.38.10",
    "vite": "^7.1.5",
    "@biomejs/biome": "^2.2.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.1.11",
    "@types/jsdom": "^21.1.7",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^24.4.0",
    "@types/smtp-server": "^3.5.12",
    "@typescript/native-preview": "^7.0.0-dev.20250915.1",
    "archiver": "^7.0.1",
    "bun-types": "^1.2.22",
    "drizzle-kit": "^0.31.4",
    "knip": "^5.63.1",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@extractus/article-extractor": "^8.0.20",
    "@mozilla/readability": "^0.6.0",
    "@rowanmanning/feed-parser": "^2.1.1",
    "arktype": "^2.1.22",
    "awilix": "^12.0.5",
    "axios": "^1.12.2",
    "axios-cache-interceptor": "^1.8.3",
    "disposable-email-domains-js": "^1.16.0",
    "dompurify": "^3.2.6",
    "drizzle-orm": "^0.44.5",
    "fast-xml-parser": "^5.2.5",
    "jsdom": "^26.1.0",
    "mailparser": "^3.7.4",
    "node-mailjet": "^6.0.9",
    "smtp-server": "^3.14.0",
    "ulid": "^3.0.1"
  },
  "type": "module",
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": [
      "src/**/*.{ts,svelte}",
      "tests/**/*.ts",
      "bin/**"
    ],
    "ignore": [
      "build/**",
      "ext/**",
      "rollout.ts",
      "src/cloudflare/**"
    ],
    "ignoreBinaries": [
      "build"
    ],
    "ignoreUnresolved": [
      "^\\$service-worker"
    ]
  }
}
